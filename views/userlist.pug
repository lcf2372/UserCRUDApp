doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title User List
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles.css")

  body
    .container.my-5
      h2.text-center.text-light.mb-4 User List

      // Card Box for User List Table
      .card.shadow-sm
        .card-body
          .text-end.mb-3
            a.btn.btn-success(href="/add") Add New User

          table.table.table-bordered.table-striped
            thead.table-dark
              tr
                th Last Name
                th First Name
                th Date of Birth
                th Email
                th Actions
            tbody
              each user in users
                tr
                  td= user.lastName
                  td= user.firstName
                  td= user.dateOfBirth.toLocaleDateString()
                  td= user.email
                  td
                    a.btn.btn-warning.btn-sm(href=`/edit/${user._id}`) Edit
                    |
                    form(action=`/delete/${user._id}`, method="POST", style="display:inline")
                      button.btn.btn-danger.btn-sm(type="submit") Delete

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
