doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Add User
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles.css")

  body
    .container.my-5
      h2.text-center.text-light.mb-4 Add New User

      .card.shadow-sm
        .card-body
          form(action="/add", method="POST")
            .row.mb-3
              .col-md-6
                label.form-label(for="lastName") Last Name
                input.form-control(type="text", id="lastName", name="lastName", required)
              .col-md-6
                label.form-label(for="firstName") First Name
                input.form-control(type="text", id="firstName", name="firstName", required)
            .row.mb-3
              .col-md-6
                label.form-label(for="dateOfBirth") Date of Birth
                input.form-control(type="date", id="dateOfBirth", name="dateOfBirth", required)
              .col-md-6
                label.form-label(for="phoneNumber") Phone Number
                input.form-control(type="tel", id="phoneNumber", name="phoneNumber", required)
            .row.mb-3
              .col-md-6
                label.form-label(for="address1") Address 1
                input.form-control(type="text", id="address1", name="address1", required)
              .col-md-6
                label.form-label(for="address2") Address 2
                input.form-control(type="text", id="address2", name="address2")
            .row.mb-3
              .col-md-6
                label.form-label(for="city") City
                input.form-control(type="text", id="city", name="city", required)
              .col-md-6
                label.form-label(for="postalCode") Postal Code
                input.form-control(type="text", id="postalCode", name="postalCode", required)
            .row.mb-3
              .col-md-6
                label.form-label(for="country") Country
                input.form-control(type="text", id="country", name="country", required)
              .col-md-6
                label.form-label(for="email") Email
                input.form-control(type="email", id="email", name="email", required)
            .mb-3
              label.form-label(for="userNotes") User Notes
              textarea.form-control(id="userNotes", name="userNotes", rows="4")

            button.btn.btn-primary(type="submit") Add User

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
